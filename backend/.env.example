# make sure to rename this file to .env and fill in the values
# with your own credentials

# Server Configuration
PORT=3000
NODE_ENV=development

# Debug Configuration - set to true to enable detailed logging
DEBUG=true

# CORS Configuration - comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173

# Database Configuration
DATABASE_URL="mysql://username:password@localhost:3306/your_db_name"

# JWT secret for signing tokens - make sure to use a strong secret
JWT_SECRET="your_jwt_secret"