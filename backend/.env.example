# make sure to rename this file to .env and fill in the values
# with your own credentials

# Server Configuration
PORT=3000
NODE_ENV=development

# Debug Configuration - set to true to enable detailed logging
DEBUG=true

# CORS Configuration - comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173

# Database Configuration
DATABASE_URL="mysql://username:password@localhost:3306/your_db_name"

# JWT Configuration - make sure to use strong secrets in production
JWT_SECRET="your_jwt_secret_here_change_in_production"
JWT_REFRESH_SECRET="your_jwt_refresh_secret_here_change_in_production"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_EXPIRES_IN="7d"


# Twilio Configuration
TWILIO_ACCOUNT_SID="your_twilio_account_sid_here"
TWILIO_AUTH_TOKEN="your_twilio_auth_token_here"
TWILIO_PHONE_NUMBER="your_twilio_phone_number_here"